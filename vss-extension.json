{
    "manifestVersion": 1,
    "id": "matthid-semver-build-task",
    "name": "AIT SemVer Build Tools",
    "version": "0.2.14",
    "publisher": "matthid",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "description": "Tools for using version numbers as specified by https://semver.org/ in your release pipeline. Allows to manage your version number from within your repository. Includes build and release tasks.",
    "categories": [
        "Build and release"
    ],
    "icons": {
      "default": "extension-icon.png"
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/AITGmbH/AIT.VSTS.Versioning"
    },
    "links": {
        "license": {
            "uri": "https://github.com/AITGmbH/AIT.VSTS.Versioning/blob/master/license.txt"
        }
    },
    "files": [
        {
            "path": "setbuildversionfromartifact"
        },
        {
            "path": "setbuildversionfromrepository"
        }
    ],
    "contributions": [
        {
            "id": "set-build-version-from-artifact-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "setbuildversionfromartifact"
            }
        },
        {
            "id": "set-build-version-from-repository-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "setbuildversionfromrepository"
            }
        }
    ]
}